#!/bin/bash

set -e

if [ "$EUID" -ne 0 ]; then
  exec sudo "$0" "$@"
fi

BLUE='\033[0;34m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

for cmd in fzf axi-cache; do
  if ! command -v "$cmd" &>/dev/null; then
    echo -e "${RED}❌ Error: $cmd is not installed.${NC}"
    if [[ "$cmd" == "axi-cache" ]]; then
      echo "Install it with: sudo apt install apt-xapian-index"
    fi
    exit 1
  fi
done

# If query is provided, do immediate search
if [ -n "$1" ]; then
  initial_results=$(axi-cache search "$1" 2>/dev/null | grep '%' | awk '{count++; printf "\033[33m%d\033[0m \033[32m%-25s\033[0m %s\n", count, $2, substr($0, index($0,$3))}' | head -n 50)
  initial_input="$initial_results"
else
  initial_input=""
fi

selected=$(echo "$initial_input" | fzf \
  --query "$1" \
  --multi \
  --ansi \
  --disabled \
  --prompt "search: " \
  --bind "change:reload:axi-cache search {q} | grep '%' | awk '{count++; printf \"\033[33m%d\033[0m \033[32m%-25s\033[0m %s\n\", count, \$2, substr(\$0, index(\$0,\$3))}' | head -n 50" \
  --layout=reverse)


if [ -z "$selected" ]; then
  exit 0
fi

pkgs=$(echo "$selected" | awk '{print $2}')
echo -e "\n${GREEN}✓ selected package: ${NC}"
echo -e "${BLUE}$pkgs${NC}"

read -p "confirm installation (y/N): " confirm
if [[ "$confirm" =~ ^[Yy]$ ]]; then
  sudo apt update && sudo apt install -y $pkgs
else
  echo "Installation cancelled."
fi
